@page "/"
@inject NavigationManager NavigationManager

<div class="container-fluid d-flex flex-column h-100 text-center">
    <div class="row flex-grow-1 d-flex align-items-start">
        <div class="col-12">
            <img src="content/SmartVendLogo.png" alt="Logo" />
        </div>
    </div>
    <div class="row mb-5 pb-3">
        <div class="col-12 mb-5">
            <h1>Login</h1>
        </div>
        <div class="col-12 mb-4">
            <input type="text" class="form-control rounded-pill ps-4 p-3" id="login" placeholder="Wpisz swój email" required />
        </div>
        <div class="col-12 my-4">
            <button type="submit" class="main-button w-100 mb-5" @onclick="NavigateToCounter">Dalej</button>
            <a href="#">Wyjście</a>
        </div>
    </div>
</div>


@code {
    private void NavigateToCounter()
    {
      //  NavigationManager.NavigateTo("/password");
        NavigationManager.NavigateTo("/menu");
    }
}